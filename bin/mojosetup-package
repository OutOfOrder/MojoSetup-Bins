#!/bin/bash

SETUPDIR="$1"

if [ -z "$SETUPDIR" ]; then
    echo "Usage $0 Application.mojo [setup.sh]"
    exit 1
fi

if [ -L "$0" ]; then
    binpath=`readlink "$0"`
else
    binpath="$0"
fi

MOJO_DIR=`dirname "$binpath"`/mojosetup/
MOJO_DIR=`cd $MOJO_DIR; pwd`
if [ `arch` == "x86_64" ]; then
    MOJO_BINDIR=$MOJO_DIR/x86_64
else
    MOJO_BINDIR=$MOJO_DIR/x86
fi

MOJO_OUTPUT="$2"
if [ -z "$MOJO_OUTPUT" ]; then
    MOJO_OUTPUT=./setup.sh
fi

MOJO_TEMPZIP=install-$$.zip

if [ -f $MOJO_TEMPZIP ]; then
    read -n1 -p "Delete existing $MOJO_TEMPZIP?(Y/N)"
    echo
    if [ "$REPLY" == "Y" -o "$REPLY" == "y" ]; then
        rm -f $MOJO_TEMPZIP
    else
        echo "Delete or move $MOJO_TEMPZIP before running again"
        exit 1
    fi
fi

ZIPDIR=`cd $SETUPDIR/..; pwd`

(cd $SETUPDIR; zip -9r ../$MOJO_TEMPZIP *)

cp $MOJO_DIR/mojosetup.sh "$MOJO_OUTPUT"
$MOJO_BINDIR/make_self_extracting "$MOJO_OUTPUT" "$ZIPDIR/$MOJO_TEMPZIP"
if [ $? -eq 0 ]; then
    rm -f $MOJO_TEMPZIP
else
    echo "Failed to create self extracting archive leaving $MOJO_TEMPZIP"
fi

